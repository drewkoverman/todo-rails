%div.col-md-10.col-md-offset-2
  %div.row
    %col-md-12.col-md-offset-0.col-sm-11.col-sm-offset-1.col-xs-10.col-xs-offset-2
      %h5.page-header Register
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        %div.col-md-6
          %div.form-group
            %label First Name
            = f.text_field :fname, autofocus: true, class: 'form-control', :placeholder => "First Name"
        %div.col-md-6
          %div.form-group
            %label Last Name
            = f.text_field :lname, class: 'form-control', :placeholder => "Last Name"
        %div.col-md-12
          %div.form-group
            %label Email address
            %div.input-group
              = f.email_field :email, autofocus: true, class: 'form-control', :placeholder => "Email Address"
              %span.input-group-addon Example: @yourcompany.com
        %div.col-md-12
          %div.form-group
            %label Password
            = f.password_field :password, autocomplete: "off", class: 'form-control', :placeholder => "Password"
        %div.col-md-12
          %div.form-group
            %label Password Confirmation
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', :placeholder => "Password Confirmation"
        %div.col-md-12
          = f.submit "Sign up", class: 'btn btn-inverse'
