%div.col-md-10.col-md-offset-2
  %div.row
    %col-md-12.col-md-offset-0.col-sm-11.col-sm-offset-1.col-xs-10.col-xs-offset-2
      %h5.page-header Edit Profile
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        %div.col-md-6
          %div.form-group
            %label First Name
            = f.text_field :fname, autofocus: true, class: 'form-control'
        %div.col-md-6
          %div.form-group
            %label Last Name
            = f.text_field :lname, class: 'form-control'
        %div.col-md-12
          %div.form-group
            %label Email address
            = f.text_field :email, class: 'form-control'
        %div.col-md-12
          %div.form-group
            %label Password
            %div.input-group
              %input{type: "password", name: "user[password]", class: 'form-control', :placeholder => "leave blank if you don't want to change it"}
                %span.input-group-addon
                  = @minimum_password_length
                  characters minimum
        %div.col-md-6
          %div.form-group
            %label Password Confirmation
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', :placeholder => 'Enter password confirmation'
        %div.col-md-6
          %div.form-group
            %label Current Password
            = f.password_field :current_password, autocomplete: "off", class: 'form-control', :placeholder => 'Current password to confirm your changes'
        %div.col-md-12
          = f.submit "Update Profile", class: 'btn btn-inverse'
